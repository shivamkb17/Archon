# Archon Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Database Configuration (Supabase)
# =============================================================================
# Get these from your Supabase project dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# =============================================================================
# OPTIONAL: AI/LLM Configuration
# =============================================================================
# OpenAI API key for embeddings and LLM features
# Can be set via UI if not provided here
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# OPTIONAL: Observability and Logging
# =============================================================================
# Logfire token for observability (optional)
LOGFIRE_TOKEN=your-logfire-token-here

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL: Service Ports (defaults shown)
# =============================================================================
# Main server port
ARCHON_SERVER_PORT=8181

# MCP server port
ARCHON_MCP_PORT=8051

# Agents service port
ARCHON_AGENTS_PORT=8052

# Frontend port
ARCHON_UI_PORT=3737

# =============================================================================
# OPTIONAL: Feature Flags
# =============================================================================
# Enable AI agents service (true/false)
AGENTS_ENABLED=false

# =============================================================================
# OPTIONAL: Development Settings
# =============================================================================
# Host for development (usually localhost)
HOST=localhost

# Production mode flag
PROD=false

# Show dev tools in UI
VITE_SHOW_DEVTOOLS=false

# Allowed hosts for CORS (comma-separated)
VITE_ALLOWED_HOSTS=

# =============================================================================
# OPTIONAL: RAG Strategy Configuration
# =============================================================================
# Use contextual embeddings (true/false)
USE_CONTEXTUAL_EMBEDDINGS=false

# Use hybrid search (true/false)
USE_HYBRID_SEARCH=true

# Use agentic RAG (true/false)
USE_AGENTIC_RAG=true

# Use reranking (true/false)
USE_RERANKING=true
